{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ]
}